@keyframes loader-scale {
  0% {
    transform: scale(0);
    opacity: 0; }
  50% {
    opacity: 1; }
  100% {
    transform: scale(1);
    opacity: 0; }
}

@keyframes loader-rotate {
  0% {
    transform: rotate(0); }
  100% {
    transform: rotate(360deg); } }

.spinner
  display block
  min-width 32px
  min-height 32px
  height 100%
  position relative

  &:after
    content ''
    display block
    background url('./img/loader.svg') no-repeat center
    background-size 100%
    animation loader-rotate 1s ease-in-out infinite
    size 32px
    position absolute
    left calc(50% - 16px)
    top calc(50% - 16px)
    box-sizing border-box

  &_SMALL
    min-width 20px
    min-height 20px

    &:after
      size 20px
      left calc(50% - 10px)
      top calc(50% - 10px)
      border-width 2px

  &_MEDIUM
    min-width 24px
    min-height 24px

    &:after
      size 24px
      left calc(50% - 12px)
      top calc(50% - 12px)
